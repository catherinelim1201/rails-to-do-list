<div class="container">
  <h1>My tasks</h1>

  <div>
    <table>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.title, task_path(task) %></td>
          <td>
            <%= link_to task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div>
    <button>
      <%= link_to new_task_path(@task)  do %>
        <i class="fa-solid fa-plus">Add a new task</i>
      <% end %>

    </button>
  </div>

</div>
